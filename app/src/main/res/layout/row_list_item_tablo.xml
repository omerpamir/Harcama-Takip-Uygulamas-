<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/padd_default"
    android:paddingVertical="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_margin="5dp"
        android:layout_toLeftOf="@+id/layout_toplamlar"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_ay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="Ocak" />

        <TextView
            android:id="@+id/tv_yıl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="2021" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_toplamlar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_gelir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Gelir: ₺1996" />

        <TextView
            android:id="@+id/tv_artan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Artan: ₺1996" />

    </LinearLayout>

</RelativeLayout>